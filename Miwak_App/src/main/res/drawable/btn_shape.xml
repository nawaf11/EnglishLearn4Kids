<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true">
    <shape
        android:shape="rectangle"
        >

        <gradient
            android:startColor="@color/colorNumbers"
            android:angle="45"
            android:endColor="#FF24C92C"/>

    </shape>

</item>


    <item >
        <shape
            android:shape="rectangle"
            >

            <solid
                android:color="@color/colorNumbers"
                />
          
        </shape>

    </item>
</selector>
